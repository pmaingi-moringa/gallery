pipeline {
    agent any
    tools {nodejs "node"}
    stages {
        stage ('clone repo') { //clone repo from github
            steps{
                git url: "https://github.com/pmaingi-moringa/gallery.git", branch: "master"
            }
        }
        stage ('Build') { //install npm, mocha and chai
            steps{
                sh 'npm install'
            }
        }
        stage ('Run tests') { //run npm test on cloned repo
            steps{ 
                sh 'npm test' 
            }
        }
        stage ('Deploy on Heroku') { //deploy on heroku
            steps{ 
                echo 'Heroku part...'
            }
        }
    }
    post{
        success{ //send email and slack message on success
            script{
                slackSend(channel: "testing-ip1", message: "Jenkins pipeline passed without errors! Running ${env.BUILD_ID} on ${env.JENKINS_URL}", color:"good")
                emailext body: "All is well!, Running ${env.BUILD_ID} on ${env.JENKINS_URL}", to: "paulmwendwamaingi@gmail.com", subject: "Build Passed in Jenkins: IP1"
            }
        } 
        failure{ //send email and slasck message on failure 
            script{
                slackSend(channel: "testing-ip1", message: "Jenkins pipeline failed! Running ${env.BUILD_ID} on ${env.JENKINS_URL}", color:"danger")
                emailext body: "Check console output in Jenkins, Running ${env.BUILD_ID} on ${env.JENKINS_URL}", to: "paulmwendwamaingi@gmail.com", subject: 'Build Failed in Jenkins: IP1'
            }
        } 
    } 
}