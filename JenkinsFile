pipeline {
    agent any
    tools{
        nodejs 'node'
    }
    stages {
        stage ('install npm') {
            sh 'npm install'
        }
        stage ('clone repo') {
            url: "https://github.com/pmaingi-moringa/gallery.git"
            branch: "master"
        }
        stage ('run tests') {
            sh 'npm test'
        }
        stage ('Deploy in Heroku') {
            
        }
    }
    post{
        success{
            script{
                slackSend(channel: "ip1-devops007", message: "Jenkins pipeline communication success!")
            }
        }
    }
}