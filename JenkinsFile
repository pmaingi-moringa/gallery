pipeline {
    agent any
    tools {nodejs "node"}
    stages {
        stage ('clone repo') { //clone repo from github
            steps{
                git url: "https://github.com/pmaingi-moringa/gallery.git", branch: "master"
            }
        }
        stage ('Build') { //install npm from shell
            steps{
                sh 'npm install'
            }
        }
        stage ('Run tests') { //run npm test on cloned repo
            steps{ 
                //sh 'npm test'
            }
        }
    }
    post{
        success{
            script{
                slackSend(channel: "testing-ip1", message: "Jenkins pipeline passed without errors!")
            }
        }
        failure{
            script{
                slackSend(channel: "testing-ip1", message: "Jenkins pipeline failed!")
            }
        }
    }
}