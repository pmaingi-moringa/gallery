pipeline {
    agent any
    stages {
        stage ('install npm') {
            steps{
                sh 'npm install'
            }
        }
        stage ('clone repo') {
            steps{
                git url: "https://github.com/pmaingi-moringa/gallery.git", branch: "master"
            }
        }
        stage ('run tests') {
            steps{ 
                sh 'npm test'
            }
        }
        stage ('Deploy in Heroku') {
            steps{
                echo 'TBD on Heroku'
            }
        }
    }
    post{
        success{
            script{
                slackSend(channel: "testing-ip1", message: "Jenkins pipeline communication success!")
            }
        }
    }
}