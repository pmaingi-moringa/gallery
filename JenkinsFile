pipeline {
    agent any
    tools{
        nodejs 'node'
    }
    stages {
        stage ('install npm') {
            steps{sh 'npm install'}
        }
        stage ('clone repo') {
            steps{
                git{
                    url: "https://github.com/pmaingi-moringa/gallery.git"
                    branch: "master"
                }
            }
        }
        stage ('run tests') {
            steps{ sh 'npm test'}
        }
        stage ('Deploy in Heroku') {
            steps{}
        }
    }
    post{
        success{
            script{
                slackSend(channel: "ip1-devops007", message: "Jenkins pipeline communication success!")
            }
        }
    }
}